generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id       String @id @default(uuid())
  name     String
  category String
  stock    Int    @default(0)
  price    Float
  minStock Int    @default(10)
  
  sales           Sale[]
  stockMovements  StockMovement[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sale {
  id          String @id @default(uuid())
  productId   String
  quantity    Int
  totalPrice  Float
  customerName String?
  date        DateTime @default(now())
  
  product Product @relation(fields: [productId], references: [id])
}

model StockMovement {
  id        String @id @default(uuid())
  productId String
  type      String // 'entrada' ou 'saida'
  quantity  Int
  reason    String
  date      DateTime @default(now())
  
  product Product @relation(fields: [productId], references: [id])
}